<h1 class='current-category'><%= params[:category] %></h1>

<% if @games.count == 0 %>
	<h1>There are no game in this category </h1>

<% else %>

	<div class="row">
	<% @games.each do |game| %>
		<div class="col-md-3">
			<p class='title'><%= game.title %></p>
			<a href="/games/<%= game.id %>">
				<%= image_tag game.game_img.url(:game_index), class: "game" %>
				</a>
		</div>
	<% end %>
	</div>
<% end %>


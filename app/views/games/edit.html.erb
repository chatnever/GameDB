<div class='col-md-6 col-md-offset-3'>
	<div class='new-game-form'>

	<h1>Edit Game</h1>

	<%= simple_form_for @game, :html => { :multipart => true } do |f| %>
		<%= f.select :category_id, @categories %>
		<%= f.file_field :game_img %>
		<%= f.input :title, label: "Game Title" %>
		<%= f.input :description %>
		<%= f.input :developer %>
		<%= f.input :download %>
		<%= f.input :video %>
		<%= f.button :submit, class: 'btn-custom2' %>
	<% end %>

	</div>

</div>